{
    "$schema": "../.sitecore/schemas/ModuleFile.schema.json",
    "namespace": "InitItems",
    "items": {
        "includes": [
            {
                "name": "content-root",
                "path": "/sitecore/content",
                "scope": "singleItem",
                "allowedPushOperations": "createAndUpdate"
            },
            {
                "name": "api-key",
                "path": "/sitecore/system/Settings/Services/API Keys/PLAY",
                "scope": "singleItem"
            },
            {
                "name": "core-fields",
                "path": "/sitecore/system/Field types/PLAY Types",
                "database": "core"
            },
            {
                "name": "image-field-type",
                "path": "/sitecore/system/Field types/Simple Types/Image",
                "scope": "singleItem",
                "database": "core"
            },
            {
                "name": "powershell-scripts-warmup",
                "path": "/sitecore/system/Modules/PowerShell/Script Library/PLAY"
            },
            {
                "name": "languages",
                "path": "/sitecore/system/Languages",
                "scope": "descendantsOnly",
                "rules": [
                    {
                        "path": "/en",
                        "scope": "ignored"
                    }
                ]
            }
        ]
    }
}