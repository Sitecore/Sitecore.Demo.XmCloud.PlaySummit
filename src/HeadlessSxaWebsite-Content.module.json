{
    "$schema": "../.sitecore/schemas/ModuleFile.schema.json",
    "namespace": "HeadlessSxaWebsite-Content",
    "references": [ "HeadlessSxaWebsite" ],
    "items": {
        "includes": [
            {
                "name": "sxa-content",
                "path": "/sitecore/content",
                "scope": "descendantsOnly",
                "rules": [
                    {
                        "path": "/Home",
                        "scope": "ignored"
                    },
                    {
                        "path": "/CMP",
                        "scope": "ignored"
                    }
                ]
            },
            {
                "name": "sxa-media",
                "path": "/sitecore/media library/Project",
                "scope": "descendantsOnly"
            },
            {
                "name": "system-media",
                "path": "/sitecore/media library/System",
                "scope": "descendantsOnly",
                "rules": [
                    {
                        "path": "/Simulator Backgrounds",
                        "scope": "ignored"
                    },
                    {
                        "path": "/Template Thumbnails",
                        "scope": "ignored"
                    }
                ]
            }
        ]
    }
}